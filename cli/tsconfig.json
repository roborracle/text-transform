{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "./src/**/*",
    "../lib/transformations/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
